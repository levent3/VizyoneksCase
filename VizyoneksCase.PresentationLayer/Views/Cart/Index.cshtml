@model VizyoneksCase.EntityLayer.Concrete.Cart

<div class="container pb-5">
   <div class="row">
       <div class="col-md-12">

           <h2>

               Alışveriş Sepeti
           </h2>

           <table class="table table-bordered"> 

               <thead>
                   <tr>
                       <th></th>
                       <th>Quantity</th>
                       <th>Product Name</th>
                       <th>Price</th>
                       <th>Sub Total</th>


                   </tr>


               </thead>
               <tbody>

                   @foreach (var item in Model.CartLines)
                    {
                        
                    
                   <tr>
                       <td></td>
                       <td>@item.Quantity</td>
                       <td>@item.Product.Name</td>
                       <td>@item.Product.UnitPrice</td>
                       <td>@(item.Product.UnitPrice*item.Quantity)</td>
                       


                   </tr>
                    }

               </tbody>
               <tfoot>
                   <tr>
                       <td colspan="4"></td>
                       <td>
                           
                       </td>

                   </tr>

               </tfoot>

           </table>


       </div>




   </div>






</div>